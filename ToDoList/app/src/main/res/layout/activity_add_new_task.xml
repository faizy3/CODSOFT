<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Add New Task"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtAddNewTask"
        android:background="@null"
        android:hint="New Task"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_below="@+id/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@+id/edittxtAddNewTask"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtDescription"
        android:background="@null"
        android:hint="Add Descripton"
        android:textSize="20sp"
        android:layout_below="@+id/edittxtAddNewTask"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@+id/edittxtDescription"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/descriptionLine"/>
    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Select time for task"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_below="@+id/descriptionLine"/>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTitle"
        android:id="@+id/timepicker"
        android:timePickerMode="spinner"/>
    <Button
        android:id="@+id/btnSaveTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timepicker"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textColor="@color/teal_700"
        android:textSize="30sp" />


</RelativeLayout>